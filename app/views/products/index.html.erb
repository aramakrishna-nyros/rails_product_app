<div class="page-header">
  <h1>Products</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= check_box_tag 'tick' %> <strong>Show all</strong></th>
      <th>id</th>
      <th>Product id</th>
      <th>Title</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Vat</th>
      <th>Total price</th>
      <th>Image</th>
      <th>Description</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= check_box_tag 'row_check' %></td>
        <td><%= product.id %></td>
        <td><%= product.product_id %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.vat %></td>
        <td><%= product.totol_price %></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= product.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class = 'table'>
  <tr>
    <td class = "col-sm-5"><%= link_to t('.new', :default => t("helpers.links.new")), new_product_path, :class => 'btn btn-primary' %></td>
    <td class = "col-sm-offset-4 col-sm-7"><%= paginate @products %></td>
    <td class = "col-sm-4">
          <%= link_to 'send mail', send_mail_path, :class => 'btn btn-primary sending' %>
    </td>
  </tr>
  <tr>
    <%= link_to 'Download as excel', products_path(format: :xlsx) %><br>
    <%= link_to 'Download Pdf Report', download_pdf_path(format: 'pdf') %>
  </tr>
</table>

<script type="text/javascript">
$(document).ready(function () {
    $('.sending').click(function(){
      var href = $('.sending').attr('href')
      href = href + "?id =52}'"
      $('.sending').attr("href",href)
    });


    var ckbox = $('#tick');
    $('input').on('click',function () {
        if (ckbox.is(':checked')) {
            alert('You have Checked it');
        } else {
            alert('You Un-Checked it');
        }
    });
});

</script>

