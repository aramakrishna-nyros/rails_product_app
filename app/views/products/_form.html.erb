<%= form_for @product, :html => { :class => "form-horizontal product", multipart: true  } do |f| %>

    <% if @product.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
<div class = "container">
    <div class="form-group">
      <%= f.label :title, :class => 'control-label col-sm-4' %>
      <div class="col-sm-4">
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :price, :class => 'control-label col-sm-4' %>
      <div class="col-sm-4">
        <%= f.text_field :price, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :quantity, :class => 'control-label col-sm-4' %>
      <div class="col-sm-4">
        <%= f.text_field :quantity, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :vat, :class => 'control-label col-sm-4' %>
      <div class="col-sm-4">
        <%= f.text_field :vat, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => 'control-label col-sm-4' %>
      <div class="col-sm-4">
        <%= f.text_field :description, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, :class => 'control-label col-sm-4' %>
      <div class="col-sm-4">
        <%= f.file_field :image %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  products_path, :class => 'btn btn-default' %>
      </div>
    </div>

  </div>  
<% end %>
